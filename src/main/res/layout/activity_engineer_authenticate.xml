<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/toolbar_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/layout_header_authenticate" />

                <RelativeLayout
                    android:id="@+id/layout_service_types"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="服务类型" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:src="@mipmap/jt" />
                </RelativeLayout>

                <View
                    style="@style/view_width_style"
                    android:layout_marginLeft="@dimen/x20" />

                <RelativeLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="登记地址" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_toLeftOf="@+id/right_jt1" />

                    <ImageView
                        android:id="@+id/right_jt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:src="@mipmap/jt" />
                </RelativeLayout>

                <View
                    style="@style/view_width_style"
                    android:layout_marginLeft="@dimen/x20" />

                <RelativeLayout
                    android:id="@+id/layout_company_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="所属公司" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_toLeftOf="@+id/right_jt2" />

                    <ImageView
                        android:id="@+id/right_jt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:src="@mipmap/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y20"
                    android:background="@color/divide_bg_gray" />

                <RelativeLayout
                    android:id="@+id/layout_truename"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="真实姓名" />

                    <TextView
                        android:id="@+id/tv_truename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_toLeftOf="@+id/right_jt3" />

                    <ImageView
                        android:id="@+id/right_jt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:src="@mipmap/jt" />
                </RelativeLayout>

                <View
                    style="@style/view_width_style"
                    android:layout_marginLeft="@dimen/x20" />

                <RelativeLayout
                    android:id="@+id/layout_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="身份证号码" />

                    <TextView
                        android:id="@+id/tv_id_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_toLeftOf="@+id/right_jt" />

                    <ImageView
                        android:id="@+id/right_jt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:src="@mipmap/jt" />
                </RelativeLayout>

                <include layout="@layout/layout_footer_upload_photo" />
            </LinearLayout>
        </ScrollView>


        <TextView
            android:id="@+id/tijiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y75"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y60"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x75"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="提交审核"
            android:textColor="@color/white"
            android:textSize="@dimen/y30"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>