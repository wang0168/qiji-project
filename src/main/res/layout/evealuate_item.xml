<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <tts.moudle.api.widget.CircleImageView
            android:id="@+id/face_img"
            android:layout_width="@dimen/x67"
            android:layout_height="@dimen/y67"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y24"
            android:src="@mipmap/mrt" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/ratingBarLastSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:text="1小时前"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y20">

        <TextView
            android:id="@+id/evaluate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:textSize="@dimen/y30" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y79"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y25"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/look_server"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y50"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="查看服务"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/reply_evealuate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y50"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:gravity="center_vertical"
                android:text="回复"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/y30" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>