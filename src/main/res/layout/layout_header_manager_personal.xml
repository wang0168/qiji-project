<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/background_white"
        android:paddingBottom="@dimen/y25"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:paddingTop="@dimen/y25">


        <ImageView
            android:id="@+id/face"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/rl" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/face"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y25"
            android:layout_toRightOf="@+id/face"
            android:text="5月账单"
            android:textColor="#575757"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/face"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@+id/face"
            android:text="5月账单"
            android:textColor="#575757"
            android:textSize="@dimen/y30" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/activity_background" />
</LinearLayout>