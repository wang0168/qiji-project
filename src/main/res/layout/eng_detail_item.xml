<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/engineer_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y136"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y100"
            android:layout_marginLeft="@dimen/eight_sp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/engineer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y35" />

                <RatingBar
                    android:id="@+id/order_evaluate"
                    style="?android:ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/y25"
                    android:max="255"
                    android:numStars="5"
                    android:paddingTop="@dimen/y5"
                    android:progress="255"
                    android:rating="4"
                    android:stepSize="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/engineer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x24"
                android:gravity="center"
                android:textSize="@dimen/y30" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/y20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:text="专业技能："
            android:textColor="@color/black"
            android:textSize="@dimen/y30" />

        <tts.project.hoop.widget.FlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_marginLeft="@dimen/x20" />
        <!--android:background="@mipmap/pl"-->
        <TextView
            android:id="@+id/evaluate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="服务评价(30)"
            android:textColor="@color/black"
            android:textSize="@dimen/y30" />
    </LinearLayout>
</LinearLayout>